<ul class="navbar mr-auto fixed-top">

  <div class="container">

    <li class="nav-item">
      <%= link_to root_path do %>
        <%= image_tag "logo_red.png", id: 'logo' %>
      <% end %>
    </li> 

    <% if user_signed_in? %>

      <li class="nav-item">
        <%= simple_form_for :search, url: cocktails_path, method: "GET", html: { class: 'form-inline' } do |f| %>
          <%= f.input :name, input_html: {value: ""}, label: false %>   
          <%= f.submit "Search", class: "btn" %>
        <% end %>
      </li>

      <li class="nav-item">
        <%= link_to new_cocktail_path do %>
          <button class="btn" type="button">Mix a new drink!</button>
        <% end %>
      </li>

      <li class="nav-item dropdown">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "My cocktails", "#", class: "dropdown-item" %>
          <%= link_to "Favorites", "#", class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
      
    <% else %>
      <li class="nav-item">
        <%= link_to "Login", new_user_session_path, class: "nav-link" %>
      </li>
    <% end %>
      
  </div>
</ul>