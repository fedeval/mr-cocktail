<ul class="navbar mr-auto fixed-top">

  <li class="nav-item">
    <%= link_to root_path do %>
      <%= image_tag "logo_red.png", id: 'logo' %>
    <% end %>
  </li> 

  <% if user_signed_in? %>

    <li class="nav-item dropdown">
      <%= image_tag "https://kitt.lewagon.com/placeholder/users/fedeval", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
        <%= link_to "Mix a new cocktail", new_cocktail_path, class: "dropdown-item" %>
        <%= link_to "Dashboard", dashboard_index_path, class: "dropdown-item" %>
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
      </div>
    </li>
    
  <% else %>
    <li class="nav-item">
      <%= link_to "Login", new_user_session_path, class: "nav-link" %>
    </li>
  <% end %>
      
</ul>