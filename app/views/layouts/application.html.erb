<!DOCTYPE html>
<html>
  <head>
    <title>RailsMisterCocktail</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <nav class="navbar fixed-top">
    
    <div class="container">
      <%= link_to root_path do %>
        <%= image_tag "logo_red", id: 'logo' %>
      <% end %>
      <%= simple_form_for :search, url: cocktails_path, method: "GET", html: { class: 'form-inline' } do |f| %>
        <%= f.input :name, input_html: {value: ""}, label: false %>   
        <%= f.submit "Search", class: "btn" %>
      <% end %>
      <%= link_to new_cocktail_path do %>
        <button class="btn" type="button">Mix a new drink!</button>
      <% end %>
    </div>
  </nav>
  
  <body>
    <%= yield %>
  </body>

</html>

