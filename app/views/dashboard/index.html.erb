<div class="dashboard-wrapper">
  <div class="dashboard-profile-card">
    <div class="dashboard-avatar">
      <%= image_tag "https://kitt.lewagon.com/placeholder/users/fedeval", class: "avatar-large" %>
    </div>
    <div class="dashboard-user-info">
      <div class="dashboard-user-name">
        <p>Federico Valenza</p> 
      </div>
      <div class="dashboard-user-data">
        <div class="dashboard-card-data">
          <i class="fas fa-cocktail"></i>
          <%= @user_cocktails.count %>
        </div>
        <div class="dashboard-card-data">
          <i class="fas fa-heart"></i>
          <!-- TODO: add option to favorite cocktails -->
          <%= 10 %>
        </div>
      </div>
    </div>
  </div>
  <div class="dashboard-body">
    <div class="dashboard-body-card">
      <% @user_cocktails.each do |cocktail| %>       
        <div class="dashboard-user-cocktail-card">
          <div class="cocktail-pic">
            <%= link_to cocktail_path(cocktail) do %>
              <%= cl_image_tag cocktail.photo.key, width: 120, height: 120, crop: :fill %>
            <% end %>
          </div>
          <div class="cocktail-info">
            <div id="name-rating">
              <p><%= cocktail.name %></p>
              <p><%= cocktail.average_review_rating() %></p>
            </div>
            <div id="edit-delete">
              <div id="edit">
                <%= link_to edit_cocktail_path(cocktail) do %>
                  <i class="far fa-edit"></i>
                <% end %>              
              </div>
              <div id="delete">
                <%= link_to cocktail_path(cocktail), method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="far fa-trash-alt"></i>
                <% end %>              
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="dashboard-body-card">
      <div class="dashboard-favorites-grid">  
        <% @cocktails.sample(14).each do |favorite| %>
          <div class="dashboard-favorite-card">
            <div class="cocktail-pic">
              <%= link_to cocktail_path(favorite) do %>
                <%= cl_image_tag favorite.photo.key, width: 120, height: 120, crop: :fill %>
              <% end %>
            </div>
            <div id="name-rating">
              <p><%= favorite.name %></p>
              <!-- TODO: connect user to review -->
              <p><%= '⭐️' * 4.5 %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>    