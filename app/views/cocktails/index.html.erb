<h1>Cocktails</h1>
<br>
<%= link_to 'Mix a new cocktail', new_cocktail_path %>
<br><br>  
<ul>
  <% @cocktails.each do |cocktail| %>
    <li>
      <%= link_to cocktail.name, cocktail_path(cocktail) %>
      <% cocktail.ingredients.each do |ingredient| %>
        <%= ingredient.name %>
      <% end %>
    </li>  
  <% end %>
</ul>
      