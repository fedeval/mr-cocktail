<div class="cocktails-wrapper">
  <div class="show-container">
    <div class="show-column">
      <%= cl_image_tag @cocktail.photo.key, height: 450, width: 350, crop: :fill, class: 'cocktail-image' %>
      <div class="review-form">
        <h3>Review this drink:</h3>
        <%= simple_form_for [@cocktail, @review] do |f| %>
          <%= f.input :rating%>
          <%= f.input :content %>
          <%= f.submit "Review the #{@cocktail.name}", class: 'btn' %>
        <% end %>
      </div>
      <%= link_to 'Back to the Bar', cocktails_path, {class: 'btn'} %>
    </div>
    <div class="show-column">
      <div class="cocktail-info">
        <h1><%= @cocktail.name %></h1>
        <div class="cocktail-description">
          <p>This blended treat gives you the coffee-house flavor that you love without having to ever leave your home. Try this delicious <%= @cocktail.name %> recipe today!</p>
        </div>
      </div>
      <div class="show-grid" id="cocktail-instructions">
        <div class="cocktail-ingredients">
            <h3>Ingredients</h3>
            <% @cocktail.doses.each do |dose| %>
              <div class="ingredient-info">
                <%= Ingredient.find(dose.ingredient_id).name %>: <%= dose.description %>
              </div>
            <% end %>        
        </div>
        <div class="cocktail-recipe">
          <h3>Recipe</h3>
          <p>Lorem ipsum...</p>
        </div>
      </div>
      <div class="cocktails-reviews">
        <h3>Reviews</h3>
          <% @cocktail.reviews.each do |review| %>
            <div class="review">
              <%= '⭐️' * review.rating %>: <%= review.content %>              
            </div>
          <% end %> 
      </div>
    </div>
  </div>
 



  
</div>

